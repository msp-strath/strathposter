\ProvidesPackage{strathclyde-poster}

%% --------------------------------------------------------- [ Declare Options ]
\RequirePackage{kvoptions}
\RequirePackage{kvoptions-patch}
\SetupKeyvalOptions{%
  family=strath,
  prefix=STRATH@,
}

\DeclareStringOption[4]{columns}

\ProcessKeyvalOptions*
%% ----------------------------------------------------------------- [ Imports ]
\RequirePackage[l2tabu,orthodox]{nag}
\RequirePackage{fixltx2e}
\RequirePackage[british]{babel}
\RequirePackage[strict=true]{csquotes}
\RequirePackage{environ}
\RequirePackage{comment}
%% Fonts
\RequirePackage[T1]{fontenc}
\RequirePackage[protrusion=true, expansion=true]{microtype}
\RequirePackage{tgbonum}
\RequirePackage[scaled]{helvet}
\RequirePackage{tgcursor}
\RequirePackage{xspace}
% Colours
\RequirePackage{strathclyde-colours}
% Other Packages
\RequirePackage{xcolor}
\RequirePackage[font=sf]{caption}
\RequirePackage{setspace}
\RequirePackage[inline]{enumitem}
\RequirePackage{footmisc}
\RequirePackage{relsize}
\RequirePackage{graphicx}
\RequirePackage{multicol}

%% ---------------------------------------------------------------- [ Commands ]
\newcommand{\institute}[1]{\gdef\@institute{#1}}
\newcommand{\email}[1]{\texttt{#1}}
\newcommand{\logocommand}[1]{\gdef\@logocommand{#1}}
%\newcommand{\eyecatch}[1]{\gdef\@eyecatch{#1}}
%% ----------------------------------------------------------------- [ Styling ]

\colorlet{poster-color-primary}{strath-blue}

%% Footnote
\renewcommand{\footnotelayout}{\scriptsize\sffamily\raggedright}

%% Line Spacing
%\setstretch{1.2} % Line spacing

%% Enum Item
\setitemize{topsep=0.2em,parsep=0.25em,itemsep=0.0125ex}%,nolistsep}
\setenumerate{noitemsep,nolistsep}
\setdescription{font=\sffamily\protect\color{poster-color-primary},
                leftmargin=1em
}

% Compact Lists
\newlist{compactitem}{itemize}{3}
\setlist[compactitem]{topsep=0pt,partopsep=0pt,itemsep=0pt,parsep=0pt}
\setlist[compactitem,1]{label=--}
\setlist[compactitem,2]{label=\textbullet}
\setlist[compactitem,3]{label=*}

\newlist{compactdesc}{description}{3}
\setlist[compactdesc]{topsep=0pt,partopsep=0pt,itemsep=0pt,parsep=0pt}

\newlist{compactenum}{enumerate}{3}
\setlist[compactenum]{topsep=0pt,partopsep=0pt,itemsep=0pt,parsep=0pt}
\setlist[compactenum,1]{label=\arabic*)}
\setlist[compactenum,2]{label=\alph*)}
\setlist[compactenum,3]{label=\roman*)}

%% Coloured Highlighting
\newcommand{\zoom}[1]{\textcolor{poster-color-primary}{\textbf{#1}}}
\newcommand{\highlight}[1]{\textcolor{poster-color-primary}{\textbf{#1}}}
\newcommand{\desc}[1]{\textcolor{poster-color-primary}{\bfseries\sffamily\large #1}\xspace}


%% -------------------------------------------------- [ New Poster Environment ]
\newenvironment{strathclydeposter}{%
\begin{poster}{
%% ----------------------------------------------------------------- [ Options ]
 grid=false,
 colspacing=1.3em,  % Column spacing
 linewidth=2pt,
 eyecatcher=false,
 columns=\STRATH@columns,
%% -------------------------------------------------------------- [ Background ]
% bgColorOne=white,  % primary
% bgColorTwo=white,  % secondary
 background=none,   % use
 borderColor=poster-color-primary,
%% ------------------------------------------------------------- [ Box Headers ]
 headerColorOne=poster-color-primary, % primary
 headerColorTwo=poster-color-primary!20, % secondary
 headershade=plain,        % use
 headerFontColor=white,
 headerborder=open,
 headerheight=0.12\textheight,
 headershape=roundedright,
 headerfont=\Large\sffamily\bfseries,
%% -------------------------------------------------------------- [ Box Format ]
 textfont=\sffamily\large,
 textborder=roundedleft,
% boxColorOne=black!20,      % l
% boxColorTwo=white ,     % r
 boxshade=none          % Shade direction
}
%% ------------------------------------------------------------- [ Eye Catcher ]
{\@eyecatch}
%% ------------------------------------------------------------------- [ Title ]
{\sffamily\huge\@title\vspace{0.2em}}
%% ----------------------------------------------------------------- [ Authors ]
{\sffamily\large\@author\\[0.1em]\@institute}
%% -------------------------------------------------------------------- [ Logo ]
{\@logocommand}
}
{\end{poster}}

